# VibraGuard Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/vibraguard_db
DB_USERNAME=myuser
DB_PASSWORD=mypassword

# MQTT Broker Configuration
MQTT_BROKER_URL=tcp://localhost:1883
MQTT_CLIENT_ID=vibraguard-backend
MQTT_TOPIC_SENSOR=vibra_guard/sensor
MQTT_TOPIC_CONTROL=vibra_guard/control

# Twilio SMS/Voice Configuration
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_TWIML_BIN_URL=https://your-twiml-bin-url

# Emergency Contact Numbers (E.164 format: +[country code][number])
MY_PHONE_NUMBER=+1234567890
FRIEND_PHONE_NUMBER=+1234567891

# Production Configuration Example:
# For GCP deployment, set these in Cloud Run/Compute Engine environment variables
# DB_URL=jdbc:postgresql://34.87.133.103:5432/vibraguard_db
